extends layout

block content
    #main.container-fluid
        form#sceneForm(action='/save', method='post')
            h3= "Currently editing: "
            input.col-xs-4.fullWidth(type="text", name="sceneName", value=name, readonly= (!canRename))
            div.col-xs-12
                div.edit-commands
                    a#save.fa.fa-floppy-o.scene-save(href="#")= "Save | "
                    a#cancel.fa.fa-ban.scene-cancel(href="/")= "Back"
                    textArea#sceneContents.well(name='sceneContents')= contents

block scripts
    script(src='/js/scene.js')
